<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:title="@string/big_notifications"
        app:key="big_notifications" />
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:title="@string/combine_notifications"
        android:summary="@string/combine_notifications_summary"
        app:singleLineTitle="false"
        app:key="combine_notifications" />
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:summary="@string/use_relative_date_time_summary"
        android:title="@string/use_relative_date_time"
        app:key="use_relative_date_time" />
    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:title="@string/show_taken_time_in_overview"
        app:key="show_taken_time_in_overview" />
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:title="@string/system_locale"
        app:singleLineTitle="false"
        app:key="system_locale"
        app:summary="@string/system_locale_summary"/>

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/theme_entries_titles"
        android:entryValues="@array/values_0_and_1"
        android:title="@string/theme"
        app:key="theme"
        app:useSimpleSummaryProvider="true" />
</androidx.preference.PreferenceScreen>