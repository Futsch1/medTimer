<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="@string/notification_settings_default"
        app:key="notification_settings_default" />
    <Preference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="@string/notification_settings_high"
        app:key="notification_settings_high" />
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/dismiss_notification_action"
        android:entryValues="@array/values_0_to_2"
        android:key="dismiss_notification_action"
        android:title="@string/dismiss_notification_action"
        app:useSimpleSummaryProvider="true" />
    <ListPreference
        android:defaultValue="15"
        android:entries="@array/snooze_duration"
        android:entryValues="@array/snooze_duration_values"
        android:key="snooze_duration"
        android:title="@string/snooze_duration"
        app:useSimpleSummaryProvider="true" />
    <SwitchPreferenceCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="false"
        android:summary="@string/exact_reminders_summary"
        android:title="@string/exact_reminders"
        app:key="exact_reminders" />
    <Preference
        app:key="weekend_mode"
        app:summary="@string/weekend_mode_summary"
        app:title="@string/weekend_mode" />
    <ListPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="24"
        android:entries="@array/overview_events_titles"
        android:entryValues="@array/overview_events_values"
        android:title="@string/overview_events"
        app:key="overview_events"
        app:useSimpleSummaryProvider="true" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="window_flag_secure"
        android:title="@string/block_screen_capture" />
    <ListPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="0"
        android:entries="@array/theme_entries_titles"
        android:entryValues="@array/theme_entries_values"
        android:title="@string/theme"
        app:key="theme"
        app:useSimpleSummaryProvider="true" />
</PreferenceScreen>