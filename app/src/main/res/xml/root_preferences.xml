    <Preference
        app:icon="@drawable/bell"
        app:key="notification_settings"
        app:title="@string/notification_reminder_settings" />
    <Preference
        android:icon="@drawable/display"
        app:key="display_settings"
        app:title="@string/display_settings" />
    <Preference
