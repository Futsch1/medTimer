<resources>
    <!-- Base application theme. -->
    <style name="Theme.MedTimer" parent="Theme.Material3.DynamicColors.Dark" />

    <style name="Theme.MedTimer2" parent="Theme.Material3.Dark">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="colorSurfaceContainer">@android:color/background_dark</item>
        <item name="elevationOverlayColor">@android:color/background_dark</item>
    </style>

    <style name="Theme.MedTimer.AppWidgetContainerParent" parent="Theme.Material3.DynamicColors.Dark">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
        <item name="background">@android:color/black</item>
    </style>

    <style name="Theme.MedTimer.AppWidgetContainer" parent="Theme.MedTimer.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>