<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="48dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_half_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/topBar"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_rect_primary"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/guideline_half_height"
        app:layout_constraintEnd_toEndOf="@id/buttonBackground"
        app:layout_constraintStart_toStartOf="@id/buttonBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomBar"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_rect_primary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/buttonBackground"
        app:layout_constraintStart_toStartOf="@id/buttonBackground"
        app:layout_constraintTop_toTopOf="@id/guideline_half_height" />

    <View
        android:id="@+id/buttonBackground"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/shape_round_primary"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/shape_round_bg"
        android:cropToPadding="true"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@id/buttonBackground"
        app:layout_constraintEnd_toEndOf="@id/buttonBackground"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/buttonBackground"
        app:layout_constraintTop_toTopOf="@id/buttonBackground"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/check2_circle" />

    <TextView
        android:id="@+id/reminderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="bla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reminderIcon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/buttonBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/reminderIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/capsule" />


</androidx.constraintlayout.widget.ConstraintLayout>
