<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_half_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/topBar"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_rect_primary"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/guideline_half_height"
        app:layout_constraintEnd_toEndOf="@id/stateButton"
        app:layout_constraintStart_toStartOf="@id/stateButton"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomBar"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_rect_primary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/stateButton"
        app:layout_constraintStart_toStartOf="@id/stateButton"
        app:layout_constraintTop_toTopOf="@id/guideline_half_height" />

    <ImageView
        android:id="@+id/stateButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/shape_round_primary"
        android:clickable="true"
        android:contentDescription="@string/taken"
        android:cropToPadding="true"
        android:elevation="4dp"
        android:foregroundGravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/check2_circle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overviewContentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/shape_rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stateButton"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/reminderTypeIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/calendar_event" />

        <TextView
            android:id="@+id/reminderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="2dp"
            android:text="@string/reminders"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/reminderIcon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/reminderTypeIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/reminderIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/capsule" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
